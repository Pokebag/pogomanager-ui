{{#if transferring}}
  <div class="loading" data-loading-text="Transferring..."></div>
{{/if}}

{{#if evolving}}
  <div class="loading" data-loading-text="Evolving..."></div>
{{/if}}

{{#if poweringUp}}
  <div class="loading" data-loading-text="Powering Up..."></div>
{{/if}}

<header>
  <div class="no">
    #{{displayNo}}
  </div>

  {{displayName}}

  <div class="cp">
    {{stats.cp}} CP
  </div>
</header>

<meter max="{{stats.maxHP}}" value="{{stats.currentHP}}"></meter>

<img title="A {{name}}{{#if nickname}} named {{nickname}}{{/if}}" height="215" src="{{sprite}}" width="215">

<table>
  <thead>
    <th>Attack</th>
    <th>Defense</th>
    <th>Stamina</th>
  </thead>

  <tbody>
    <td{{#if perfectAttack}} class="perfect"{{/if}}>
      {{attack}} <span class="text-muted" title="IV Attack">({{stats.iv.attack}})</span>
    </td>
    <td{{#if perfectDefense}} class="perfect"{{/if}}>
      {{defense}} <span class="text-muted" title="IV Defense">({{stats.iv.defense}})</span>
    </td>
    <td{{#if perfectStamina}} class="perfect"{{/if}}>
      {{stamina}} <span class="text-muted" title="IV Stamina">({{stats.iv.stamina}})</span>
    </td>
  </tbody>
</table>

<ol>
  {{#each moves}}
    <li class="move">
      <span class="name">{{name}}</span>
      <span class="damage">{{damage}}</span>
    </li>
  {{/each}}
</ol>

<menu type="toolbar">
  <div class="primary">
    {{toPowerUp.candy}} | {{toPowerUp.stardust}}
    <button {{#unless canPowerUp}}disabled{{/unless}} name="power-up" title="Power Up" type="button"><i class="fa fa-bolt fa-fw"></i></button>
    {{#if toEvolve}}<button {{#unless canEvolve}}disabled{{/unless}} name="evolve" title="Evolve ({{toEvolve}})" type="button"><i class="fa fa-level-up fa-fw"></i></button>{{/if}}

    <span>{{candyCount}} candies</span>
  </div>

  <div class="secondary">
    <button name="transfer" title="Transfer" type="button"><i class="fa fa-exchange fa-fw"></i></button>
  </div>
</menu>
