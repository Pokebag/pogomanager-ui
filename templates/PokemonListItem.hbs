{{#if transferring}}
  <div class="loading" data-loading-text="Transferring..."></div>
{{/if}}

{{#if evolving}}
  <div class="loading" data-loading-text="Evolving..."></div>
{{/if}}

{{#if poweringUp}}
  <div class="loading" data-loading-text="Powering Up..."></div>
{{/if}}

<header>
  <div class="no">
    #{{displayNo}}
  </div>

  {{displayName}}

  <div class="cp">
    {{stats.cp}} CP
  </div>
</header>

<meter max="{{stats.maxHP}}" value="{{stats.currentHP}}"></meter>

<img title="A {{name}}{{#if nickname}} named {{nickname}}{{/if}}" height="215" src="{{sprite}}" width="215">

<table>
  <thead>
    <th>Attack</th>
    <th>Defense</th>
    <th>Stamina</th>
  </thead>

  <tbody>
    <td>
      <span title="Base ({{stats.base.attack}}) + IV ({{stats.iv.attack}})">{{attack}}</span>
    </td>
    <td>
      <span title="Base ({{stats.base.defense}}) + IV ({{stats.iv.defense}})">{{defense}}</span>
    </td>
    <td>
      <span title="Base ({{stats.base.stamina}}) + IV ({{stats.iv.stamina}})">{{stamina}}</span>
    </td>
  </tbody>
</table>

<dl>
  {{#each moves}}
  <dt>{{this}}</dt>
  {{/each}}
</dl>

<menu type="toolbar">
  <div class="primary">
    <button name="power-up" title="Power Up" type="button"><i class="fa fa-bolt fa-fw"></i></button>
    <button {{#unless toEvolve}}disabled{{/unless}} name="evolve" title="Evolve{{#if toEvolve}} ({{toEvolve}}){{/if}}" type="button"><i class="fa fa-level-up fa-fw"></i></button>
  </div>

  <div class="secondary">
    <button name="transfer" title="Transfer" type="button"><i class="fa fa-exchange fa-fw"></i></button>
  </div>
</menu>
